<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <title>尚名校</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/details.css">
    <link rel="stylesheet" href="stylesheets/style_recommened.css">
</head>
<body>
<% include navigation.ejs %>
<div class="head">
    <div class="header">
        <div class="headphoto"><img src="img/headphoto.png" width="91px" height="88px"></div>
        <div class="headpassage">
            <p1>齐书强</p1>
            <br>
            <p2>大连理工大学</p2>
        </div>
        <div class="headlogo"><img src="img/headlogo.png" width="119px" height="100px"></div>
    </div>
</div>
<div class="main">
    <div class="content">
        <div class="s-left">
            <div class="guide"><a href="/teacher">我的课程</a></div>
            <div class="guide"><a href="/teacher_re">推荐课程</a></div>
            <div class="guide"><a href="/teacher_detail">个人资料</a></div>
        </div>

        <div class="s-right">

            <div class="right-guide" id="right-guide">
                <ul>
                    <li><a href="#"></a></li>
                    <li style="float: right"><a href="#">筛选课程</a></li>
                </ul>
            </div>

            <div class="right-content" id="right-content">

                <div class="mod">

                    <%if(AllCourse.length == 0){%>
                    <%}AllCourse.forEach(function (item) { %>

                    <div class="box">
                        <img src="img/picture.jpg"/>

                        <div class="course-title"><a><%=item.courseSeriesName%></a></div>
                        <div class="course-info"><a><%=item.room%></a>&nbsp;&nbsp;&nbsp;<a><%=item.time%></a>&nbsp;&nbsp;&nbsp;<a><%=item.teacher + "老师"%></a>
                        </div>
                        <div class="pro-bac"></div>
                        <div class="pro-fro"></div>
                        <div class="course-time"><a>截止时间：2017-7-14</a>&nbsp;&nbsp;&nbsp;<a>22:00</a></div>
                    </div>
                    <%})%>
                </div>

            </div>
        </div>
    </div>
</div>
</body>
<script>
    function $(id) {
        return typeof id === 'string' ? document.getElementById(id) : id;
    }
    window.onload = function () {
        var titles = $('right-guide').getElementsByTagName('li');
        var divs = $('right-content').getElementsByClassName('mod');

        for (var i = 0; i < titles.length; i++) {
            titles[i].id = i;
            titles[i].onclick = function () {
                for (var j = 0; j < titles.length; j++) {
                    titles[j].className = ' ';
                    divs[j].style.display = 'none';
                }
                this.className = 'select';
                divs[this.id].style.display = 'block';
            }
        }
    }
    router.get('/course_recommened',function (req,res) {
        res.render('course_recommened',{})
    })
</script>